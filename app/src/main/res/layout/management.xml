<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagementActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="40sp" android:textColor="#bdbdbd" android:gravity="center_vertical|center_horizontal" android:layout_width="match_parent" android:layout_height="93dp" android:text="간호 임상입문실습 가이드"/>
        <TextView android:textSize="20sp" android:textColor="#bdbdbd" android:id="@+id/tv_login_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@drawable/line01" android:layout_width="300dp" android:layout_height="1dp"/>
                <Button android:textSize="20sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/btn_professional" android:layout_width="match_parent" android:layout_height="93dp" android:text="간호실무" android:drawableRight="@drawable/professional_c" android:backgroundTint="#ffffff"/>
                <View android:layout_gravity="right" android:background="@drawable/line02" android:layout_width="300dp" android:layout_height="1dp"/>
                <Button android:textSize="20sp"
                    android:gravity="right|center_vertical|center_horizontal|center"
                    android:id="@+id/btn_base"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:text="기본간호"
                    android:drawableLeft="@drawable/base_c"
                    android:backgroundTint="#ffffff"/>
                <View
                    android:background="@drawable/line01"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>
                <Button
                    android:textSize="20sp"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:id="@+id/btn_cartoon"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:text="핵술+ 카툰"
                    android:drawableRight="@drawable/cartoon_c"
                    android:backgroundTint="#ffffff"/>
                <View android:layout_gravity="right" android:background="@drawable/line02" android:layout_width="300dp" android:layout_height="1dp"/>
                <Button android:textSize="20sp" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/btn_communication" android:layout_width="match_parent" android:layout_height="93dp" android:text="커뮤니케이션" android:drawableLeft="@drawable/communication_c" android:backgroundTint="#ffffff"/>
                <View  android:background="@drawable/line01" android:layout_width="300dp" android:layout_height="1dp"/>
                <Button android:textSize="20sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/btn_report" android:layout_width="match_parent" android:layout_height="93dp" android:text="인계장" android:drawableRight="@drawable/report_c" android:backgroundTint="#ffffff"/>
                <View android:layout_gravity="right" android:background="@drawable/line02" android:layout_width="300dp" android:layout_height="1dp"/>
                <Button android:textSize="20sp" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/btn_graph" android:layout_width="match_parent" android:layout_height="93dp" android:text="사용자누계" android:drawableLeft="@drawable/graph_c" android:backgroundTint="#ffffff"/>
                <View android:background="@drawable/line01" android:layout_width="300dp" android:layout_height="1dp"/>
                <Button android:textSize="20sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/btn_logout" android:layout_width="match_parent" android:layout_height="93dp" android:text="로그아웃" android:drawableRight="@drawable/logout_c" android:backgroundTint="#ffffff"/>
                <View android:layout_gravity="right" android:background="@drawable/line02" android:layout_width="300dp" android:layout_height="1dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>